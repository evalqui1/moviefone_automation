package MovieFone;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Parameters;

public class TestCaseBase {

    protected WebDriver driver;

    protected String browser;

//    protected String siteUrl;

    @BeforeClass
    @Parameters({"browser, siteUrl"})
    public void setUp(String browser, String siteUrl) throws Exception{
            if(browser.equalsIgnoreCase("firefox")){
                    driver = new FirefoxDriver();
            }else if(browser.equalsIgnoreCase("chrome")){
                    driver = new ChromeDriver();
            }else{
                    throw new Exception("No Browser Selected");
            }
            
//            if(siteUrl.equalsIgnoreCase("site")){
//            	driver.get("http://www.moviefone.com");
//            }else{
//            	throw new Exception("No Site Allowed");
//            }
//            
            driver.manage().window().maximize();
            driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
    }

    @AfterClass
    public void tearDown(){
            driver.close();
    }
}

